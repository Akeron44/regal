{{ 'component-modals.css' | asset_url | stylesheet_tag }}

{% comment %} Gallery Modal {% endcomment %}
<div id="modal--zoom-gallery" class="modal modal--zoom-gallery color-{{ settings.color_scheme_modals }}" data-modal data-parent>
  {% comment %} Modal {% endcomment %}
  <a href="#" class="btn btn--primary modal-close" data-modal-close data-close>
    {% render 'icon-close' %} <span class="visually-hidden">{{ 'accessibility.close' | t }}</span>
  </a>
  <div class="modal-dialog" data-contents data-modal-dialog role="dialog" aria-modal="true" aria-labelledby="password-modal-title" tabindex="-1">
    <div class="modal-body" data-modal-body>
      <div class="modal-gallery-column">
        {%- for media in product.media -%}
          <div id="modal-item-{{ media.id }}" class="zoom-gallery-media">
            {%- render 'product-media',
              media: media,
              aspect_ratio: 'natural',
              lazyload: true,
              sizing_rule: 'contain',
              id_prefix: false,
              sizes: '100vw'
            -%}
            {% if media.alt %}
              <div class="media-alt size--nano" style="gap:1.2rem">
                <span class="style--subdued">{{ forloop.index }}/{{ product.media.size }}</span> <span>{{ media.alt }}</span>
              </div>
            {% endif %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>

  {% comment %} Background, click to close {% endcomment %}
  <a href="#" class="page-overlay" data-modal-overlay data-overlay aria-hidden="true"></a>
</div>